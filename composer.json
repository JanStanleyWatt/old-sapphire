{
    "name": "whojinn/sapphire",

    "authors": [
        {
            "name": "whojinn",
            "email": "whojin.message@gmail.com"
        }
    ],

    "keywords": ["markdown","extension","md","commonmark"],

    "description": "League/commonmark extension for japanese furigana.",

    "license": "Apache-2.0",

    "require": {
        "league/commonmark":"2.*",
        "php": "^7.4 || ^8.0",
        "ext-mbstring": "*",
        "psr/log": "^1.1.4",
        "psr/cache": "^1.0.1"
    },

    "require-dev": {
        "noi/parsedown-rubytext": "*",
        "noi/parsedown-newline": "*",
        "phpunit/phpunit": "*",
        "friendsofphp/php-cs-fixer": "^3.1"
    },

    "autoload": {
      "psr-4": {
          "Whojinn\\Sapphire\\":"src/"
      }
    },

    "autoload-dev": {
        "psr-4": {
            "Whojinn\\Test\\":"test/"
        }
    },

    "suggest": {
        "whojinn/danraku": "League/commonmark extension for japanese danraku style."
    },

    "scripts": {
        "test":"vendor/bin/phpunit test/SapphireEssentialTest.php"
    }
}
